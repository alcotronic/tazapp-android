<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.artifex.mupdf.viewer.ReaderView
            android:id="@+id/readerview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    <de.thecode.android.tazreader.widget.ReaderButton
            android:id="@+id/index"
            android:src="@drawable/ic_menu_black_24dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:alpha="@dimen/icon_button_alpha"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingBottom="18dp"
            />

    <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            >

        <de.thecode.android.tazreader.widget.ShareButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/share"
                android:alpha="@dimen/icon_button_alpha"
                android:paddingBottom="18dp"/>

        <de.thecode.android.tazreader.widget.ReaderButton
                android:src="@drawable/ic_apps_24dp"
                android:id="@+id/pageindex"
                android:alpha="@dimen/icon_button_alpha"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:paddingBottom="18dp"
                />
    </LinearLayout>


</RelativeLayout>
